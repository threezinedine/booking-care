@using BookingCare.Components.Components.Hoverable
@inject NavigationManager m_NavigationManager
@inherits ComponentBase


<div style="@m_MarginStyle" class="container">
	<div class="content" @onclick="ClickImage">
		<div class="image @(Item.ImageType == SliderImageType.Circle ? "circle": "rectangle")">
			@if (Item.ImageURL == string.Empty)
			{
				<img src="../../images/empty.png" />
			}
			else
			{
				<img src="@($"data:image/png;base64, {Item.ImageURL}")" />
			}
		</div>
		<div class="name-container">
			<div class="name-content">
				<div class="name">@Item.Name</div>
				@if (Item.SubName != null)
				{
					<div class="sub-name">@Item.SubName</div>
				}
			</div>
		</div>
	</div>
</div>

